 #include <stdio.h>
 int reverseNumber(int num) {
 int reversed = 0;
 while (num > 0) {
 reversed = reversed * 10 + num % 10;
 num /= 10;
 }
 return reversed;
 }
 int main() {
 int num;
 printf("Enter an integer: ");
 scanf("%d", &num);
 if (num > 0) {
 printf("The number is positive.\n");
 printf("Reverse of the number: %d\n", reverseNumber(num));
 } else {
 printf("The number is not positive.\n");
 }
 return 0;
}
